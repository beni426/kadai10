<div class="registrations-new">
  <div class="login-form-header">
    <h1 class="login-form-title">photo_share</h1>
  </div>
  <%= form_with(model: user, local: true, class: "login-form") do |form| %>
      <% if user.errors.any? %>
    <div class="alert alert-danger alert-login">
     <h3><%= pluralize(user.errors.count, "error", locale: :en)  %> prohibited this <%= user.name %> from being saved:</h3>
     <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
       <% end %>
    </ul>
   </div>
   <% end %>
    <h2>登録した写真や動画をチェック</h2>
    <%= image_tag(user.image.url, class: "form-user-image") if user.image && user.image.url %>
    <%= form.label :email, class: "sr-only" %>
    <%= form.email_field :email, class: "form-control judge-active", placeholder: t("views.users.email"), required: true, autofocus: true %>
    <%= form.label :name, class: "sr-only" %>
    <%= form.text_field :name, class: "form-control judge-active", placeholder: t("views.users.name"), required: true %>
    <%= form.label :image, class: "sr-only" %>
    <%= form.file_field :image, class: "form-control", accept: "image/jpg, image/jpeg, image/png, image/gif" %>
    <%= form.hidden_field :image_cache %>
    <%= form.label :password, class: "sr-only" %>
    <%= form.password_field :password, class: "form-control judge-active", placeholder: t("views.users.password"), required: true, minlength: 6 %>
    <%= form.label :password, class: "sr-only" %>
    <%= form.password_field :password_confirmation, class: "form-control judge-active", placeholder: t("views.users.password_confirmation"), required: true %>
    <%= form.submit "登録する", class: "btn btn-primary", id: "active-btn" %>
  <% end %>
</div>