<div class="login-form-wrapper">
  <div class="login-form-header">
    <h1 class="login-form-title">photo_connections</h1>
  </div>
  <%= form_with(model: user, local: true, class: "login-form") do |form| %>
    <%= render partial: "error_messages", locals: {user: user} %>
    <h2 class="login-form-subtitle">登録して友達の写真や動画をチェックしよう</h2>
    <%= image_tag(user.image.url, class: "form-user-image") if user.image && user.image.url %>
    <%= form.label :email, class: "sri" %>
    <%= form.email_field :email, class: "form-control", placeholder: t("views.users.email"), required: true, autofocus: true %>
    <%= form.text_field :name, class: "form-control", placeholder: t("views.users.name"), required: true %>
    <%= form.label :image, class: "sri" %>
    <%= form.file_field :image, class: "form-control", accept: "image/jpg, image/jpeg, image/png, image/gif" %>
    <%= form.hidden_field :image_cache %>
    <%= form.label :password, class: "sri" %>
    <%= form.password_field :password, class: "form-control", placeholder: t("views.users.password"), required: true, minlength: 6 %>
    <%= form.label :password, class: "sri" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: t("views.users.password_confirmation"), required: true %>
    <%= form.submit "登録する", class: "btn-primary", id: "active-btn" %>
    <p class="explanation-rule">登録することで、本規約、データに関するポリシーに同意するものとします。</p>
  <% end %>
</div>